<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.admin.AdminBookAddActivity">

    <!-- Header -->
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/shape_forma"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/btnBackAddBookAdmin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/go_back"
        android:src="@drawable/vector_backarrow"
        app:backgroundTint="@color/transparente"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="@id/view"
        app:layout_constraintHorizontal_bias="0.044" />

    <TextView
        android:layout_width="209dp"
        android:layout_height="111dp"
        android:fontFamily="@font/laurentianstdsemibold"
        android:text="@string/add_book"
        android:textAlignment="center"
        android:textColor="@color/blancoHueso"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="@id/view"
        app:layout_constraintEnd_toEndOf="@id/view" />

    <!-- Campo: Título -->

    <!-- Campo: Autor -->

    <EditText
        android:id="@+id/addTextTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="20dp"
        android:autofillHints=""
        android:backgroundTint="@color/blancoHueso"
        android:hint="@string/title_book"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="@color/blancoHueso"
        android:textColorHint="@color/gris"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view" />

    <EditText
        android:id="@+id/addTextAuthor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:hint="@string/author_book"
        android:backgroundTint="@color/blancoHueso"
        android:inputType="text"
        android:textColor="@color/blancoHueso"
        android:textColorHint="@color/gris"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/addTextTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="32dp" />

    <!-- Campo: Precio -->
    <EditText
        android:id="@+id/addTextPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:hint="@string/price_book"
        android:inputType="numberDecimal"
        android:backgroundTint="@color/blancoHueso"
        android:textColor="@color/blancoHueso"
        android:textColorHint="@color/gris"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/addTextAuthor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="32dp" />

    <!-- Campo: Descripción (ahora debajo del precio) -->
    <EditText
        android:id="@+id/addTextDescription"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:autofillHints=""
        android:hint="@string/description_book"
        android:backgroundTint="@color/blancoHueso"
        android:textColor="@color/blancoHueso"
        android:textColorHint="#CCCCCC"
        android:gravity="top"
        android:padding="12dp"
        android:inputType="textMultiLine"
        android:maxLines="5"
        app:layout_constraintTop_toBottomOf="@id/addTextPrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="32dp" />

    <!-- Selección de imagen -->
    <ImageView
        android:id="@+id/addImagePreview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:contentDescription="@string/image_book"
        android:src="@drawable/vector_imagedownload"
        android:background="?attr/selectableItemBackground"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/addTextDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón: Editar -->
    <Button
        android:id="@+id/btnSubmitAddBook"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:text="@string/go_on"
        android:textSize="40sp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/verdeOscuro"
        android:textColor="@color/blancoHueso"
        android:fontFamily="@font/laurentianstdsemibold"
        app:layout_constraintTop_toBottomOf="@id/addImagePreview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Footer -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/laurentianstdsemibold"
        android:text="@string/yenny_el_ateneo"
        android:textAlignment="center"
        android:textColor="@color/blancoHueso"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp" />
</androidx.constraintlayout.widget.ConstraintLayout>