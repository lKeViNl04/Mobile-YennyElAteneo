<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.admin.AdminBookViewActivity">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/shape_forma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnBackViewBookAdmin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/go_back"
        android:src="@drawable/vector_backarrow"

        app:backgroundTint="@color/transparente"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <TextView
        android:layout_width="235dp"
        android:layout_height="82dp"
        android:fontFamily="@font/laurentianstdsemibold"
        android:text="@string/see_book_admin"
        android:textAlignment="center"
        android:textColor="@color/blancoHueso"
        android:textSize="42sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/laurentianstdsemibold"
        android:text="@string/yenny_el_ateneo"
        android:textAlignment="center"
        android:textColor="@color/blancoHueso"
        android:textSize="20sp"

        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977" />

    <ProgressBar
        android:id="@+id/progressBarViewBookAdmin"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"

        android:visibility="visible"/>

    <ListView
        android:id="@+id/containerBooksViewAdmin"
        android:layout_width="330dp"
        android:layout_height="460dp"
        android:layout_marginTop="40dp"
        android:alignmentMode="alignMargins"
        android:orientation="horizontal"
        android:padding="16dp"
        android:textAlignment="center"


        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/view" />

    <Button
        android:id="@+id/btnAddBook"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/verdeOscuro"
        android:fontFamily="@font/laurentianstdsemibold"
        android:text="Agregar"
        android:textColor="@color/blancoHueso"
        android:textSize="30sp"

        app:layout_constraintBottom_toTopOf="@+id/containerBooksViewAdmin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />


</androidx.constraintlayout.widget.ConstraintLayout>